{
  "name": "@local/auth-is-developer",
  "version": "1.0.0",
  "description": "Full-stack authentication application with NestJS backend and Nuxt frontend",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd backend && npm ci && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm run start:prod",
    "start:backend": "cd backend && npm run start:prod",
    "start:frontend": "cd frontend && npm run preview",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build --no-cache",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "mysql2": "^3.14.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "nestjs",
    "nuxt",
    "authentication",
    "mysql",
    "jwt",
    "oauth"
  ],
  "author": "",
  "license": "MIT"
}